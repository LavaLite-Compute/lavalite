[Unit]
Description=Lavalite LIM (Load Information Manager)
Wants=network-online.target
After=network-online.target
Before=lavalite-res.service lavalite-sbatchd.service

[Service]
Type=forking
# Point LIM to the directory that contains lsf.conf and the daemons
Environment=LSF_ENVDIR=/opt/lavalite/etc
ExecStart=/opt/lavalite/sbin/lim
KillMode=control-group
GuessMainPID=no
Restart=on-failure
RestartSec=3
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target

